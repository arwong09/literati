<div class="col-xs-2 col-xs-offset-5">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
      <div class="alert alert-danger">
      <%= error %>
    </div>
    <% end %>
  <% end %>
  <h1>Sign In</h1>

<form action="<%= session_url %>" method="post">
  <input class="form-control" name="authenticity_token" type="hidden" 
    value="<%= form_authenticity_token %>">
  
  <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" id="username" name="user[username]" type="text">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input class="form-control" id="user_password" 
    name="user[password]" type="password">
  </div>
  <div class="form-group pull-left">
    <input id="login-button" class="btn btn-primary" type="submit" value="Log in">
  </div>
</form>

<form action="<%= session_url %>" method="post">
  <input type="hidden" name="authenticity_token" 
    value="<%= form_authenticity_token %>" id="authenticity_token">
    
  <input type="hidden" name="user[username]" value="Guest">
  <input type="hidden" name="user[password]" value="password">

  <button type="submit" class="btn btn-success">Sign in as Guest</button>
</form>
</div>